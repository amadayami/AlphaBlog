<h1 class="text-center mt-4" style="color:#c88995;">Create a new category</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10"> 
    <%= render 'shared/errors', obj: @category %> </div>
    <div class="col-10 form-style">
      <%= form_with(model: @category, local: true) do |f| %>
        <div class="form-group row mt-3">
          <%= f.label :name, class: "col-2 col-form-label dark-pink-text" %><br/>
          <div class="col-10">
            <%= f.text_field :name, class:"form-control", placeholder:"Enter category name" %>
          </div>
        </div>

        <div class="form-group justify-content-center row mb-3">
          <%= f.submit "Create", class: "btn btn-primary action-button col-auto mt-1" %>
        </div>
      <% end %>
    </div>

    <%= link_to 'Return to articles listing', articles_path, class:"dark-pink-text return-link" %>
  </div>
</div>
<div class="col-10"> 
  <%= render 'shared/errors', obj: @category %>
</div>
<div class="col-10 form-style">
  <%= form_with(model: @category, local: true) do |f| %>
    <div class="form-group row mt-3">
      <%= f.label :name, class: "col-2 col-form-label dark-pink-text" %><br/>
      <div class="col-10">
        <%= f.text_field :name, class:"form-control", placeholder:"Enter category name" %>
      </div>
    </div>

    <div class="form-group justify-content-center row mb-3">
      <%= f.submit class: "btn btn-primary action-button col-auto mt-1" %>
    </div>
  <% end %>
</div>
<h1 class="text-center mt-4" style="color:#c88995;">
  <%= @user.username %>'s profile
</h1>
<div class="text-center mt-4">
<% if logged_in? && @user == current_user %>
  <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-sm btn-primary action-button edit-button" %>
<% end %>
</div>
<h3 class="text-center mt-4" style="color:#c88995;">Articles</h3>
<%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
<%= render 'articles/article' %>
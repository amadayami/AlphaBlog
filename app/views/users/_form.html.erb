<div class="container">

  <div class="row justify-content-center">
    <div class="col-10"> <%= render 'shared/errors', obj: @user %> </div>
    <div class="col-10 form-style">
      <%= form_with(model: @user, local: true) do |f| %>
        <div class="form-group row mt-3">
          <%= f.label :username, class: "col-2 col-form-label dark-pink-text" %><br/>
          <div class="col-10">
            <%= f.text_field :username, class:"form-control", placeholder:"Enter a username" %>
          </div>
        </div>

        <div class="form-group row mt-3 mb-3">
          <%= f.label :email, class: "col-2 col-form-label dark-pink-text" %><br/>
          <div class="col-10">
            <%= f.email_field :email, class:"form-control", placeholder:"Enter your email address" %>
          </div>
        </div>

        <div class="form-group row mt-3 mb-3">
          <%= f.label :password, class: "col-2 col-form-label dark-pink-text" %><br/>
          <div class="col-10">
            <%= f.password_field :password, class:"form-control", placeholder:"Enter a unique password" %>
          </div>
        </div>

        <div class="form-group justify-content-center row mb-3">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary action-button col-auto") %>
          <% if !@user.new_record? %>
            <%#= f.button "Delete account", type: "submit", name: "commit", value: "delete_account", class: "btn btn-primary action-button delete-button col-auto", style:"margin-left: 5px;" %>
            <%=
              button_tag(
                "Delete account", 
                form: "optionalone", 
                type: "submit", 
                data: { turbo_confirm: "Are you sure?" }, 
                name: "commit", value: "delete_account", 
                class: "btn btn-primary action-button delete-button col-auto", 
                style:"margin-left: 5px;"
              ) 
            %>
          <% end %>
        </div>
      <% end %>
      <% if !@user.new_record? %>
        <%= form_with(model: @user, method: :delete, id: "optionalone") {} %>
      <% end %>
    </div>

    <%= link_to 'Return to articles listing', articles_path, class:"dark-pink-text return-link" %>
  </div>
</div>